{
  "manifest_version": 3,
  "name": "dert.gg",
  "version": "0.2.0",
  "description": "kutsal dert kaynağı",
  "icons": {
    "16": "icons/droplet_unauthenticated_16.png",
    "24": "icons/droplet_unauthenticated_24.png",
    "32": "icons/droplet_unauthenticated_32.png",
    "64": "icons/droplet_unauthenticated_64.png",
    "128": "icons/droplet_unauthenticated_128.png",
    "256": "icons/droplet_unauthenticated_256.png",
    "512": "icons/droplet_unauthenticated_512.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "dert.gg"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
	"*://eksisozluk.com/*",
	"*://eksisozluk2023.com/*"
      ],
      "exclude_matches": [
	"*://eksisozluk.com/",
	"*://eksisozluk.com/biri/*",
	"*://eksisozluk.com/entry/*",
	"*://eksisozluk.com/basliklar/*",
	"*://eksisozluk.com/mesaj/*",
	"*://eksisozluk.com/img/*",
	"*://eksisozluk2023.com/",
	"*://eksisozluk2023.com/biri/*",
	"*://eksisozluk2023.com/entry/*",
	"*://eksisozluk2023.com/basliklar/*",
	"*://eksisozluk2023.com/mesaj/*",
	"*://eksisozluk2023.com/img/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["https://dert-gg-staging.fly.dev/*", "http://localhost:4000/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["message_handler.js"],
      "matches": [
	"*://eksisozluk.com/*",
	"*://eksisozluk2023.com/*"
      ]
    }
  ]
}
